# API base URL — points to the production API through Nginx reverse proxy
VITE_API_URL=/api

# Base path (sub-path if served under a subpath like /hrpms, else /)
VITE_BASE_PATH=/hrpms/

# Secure storage encryption (set real secrets before building!)
VITE_ENCRYPT_SECRET=CHANGE_ME_TO_A_RANDOM_SECRET
VITE_KEY_SALT=CHANGE_ME_TO_A_RANDOM_SALT
